<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header class="row">        
        <% include ../partials/header %>        
    </header>

    <div class="row">
        <h1>Línea <%= idl %></h1>
    </div>
    <div class="row">
        <div class="col s12">
            <ul class="tabs">            
                <li class="tab col s3">
                    <a class="active" href="#direccion1">Dirección: <%= direccion1 %></a>
                </li>                
                <li class="tab col s3"><a href="#direccion2">Dirección: <%= direccion2 %></a></li>
            </ul>
        </div>
        <div id="direccion1" class="col s12">
            <div class="row">
                <% stopsDir1.forEach(function(stop) { %>                    
                    <div class="col s12">
                        <div class="card">
                            <div class="card-content">
                                <span class="card-title red-text"><%= stop.name %></span>
                                <p class="red-text text-accent-1">
                                    <%= stop.proxima.fromNow() %>
                                </p>
                            </div>
                                
                        </div>
                    </div>            
                <% }); %>
            </div>            

        </div>
        <div id="direccion2" class="col s12">
            <div class="row">
                <% stopsDir2.forEach(function(stop) { %>                    
                    <div class="col s12">
                        <div class="card">
                            <div class="card-content">
                                <span class="card-title red-text"><%= stop.name %></span>
                                <p class="red-text text-accent-1">
                                    <%= stop.proxima.fromNow() %>
                                </p>
                            </div>
                                
                        </div>
                    </div>            
                <% }); %>
            </div>
        </div>        
    </div>

    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
</html>